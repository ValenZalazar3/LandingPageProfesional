---
const servicesItems = [
    {
        title: 'Standard',
        subtitle: 'El paquete perfecto para empezar a escalar tu negocio',
        price: '89',
        text: [
            'Contenido resumido y atractivo.',
            'Diseño moderno y optimizado.',
            'Formulario de contacto.',
            'Enlaces a redes sociales.',
            'Imagenes, videos, etc.'
        ]
    },
    {
        title: 'Business',
        subtitle: 'El más elegido para llegar al siguiente nivel',
        price: '149',
        text: [
            'Varias secciones.',
            'Contenido atractivo.',
            'Diseño moderno y optimizado.',
            'Blog.',
            'Formulario de contacto.',
            'Enlaces a redes sociales.',
            'Imagenes, videos, etc.'
        ]
    },
    {
        title: 'Premium',
        subtitle: 'Obtené mayores y mejores funcionalidades',
        price: '299',
        text: [
            'Varias secciones.',
            'Catálogo de productos.',
            'Pasarela de pago.',
            'Contenido atractivo.',
            'Diseño moderno y optimizado.',
            'Formulario de contacto.',
            'Enlaces a redes sociales.',
            'Imagenes, videos, etc.'
        ]
    }
]
---

<section>
    <div class='flex flex-col justify-center items-center'>
        <h2
            class='text-2xl text-center font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white text-shadow mb-2'
        >
            Nuestros Servicios
        </h2>
        <p
            class='text-lg mb-10 text-center text-gray-800 [&>strong]:text-green-500 [&>strong]:font-semibold dark:text-gray-300'
        >
            Maximiza tu impacto llevando tu negocio al siguiente nivel con
            nuestros <strong>planes exclusivos</strong> y soluciones <strong
                >diseñadas para el éxito</strong
            >.
        </p>
    </div>
    <div
        class='flex flex-col justify-center items-center md:items-stretch gap-5 md:flex-row'
    >
        {
            servicesItems.map(({ title, subtitle, price, text }) => {
                return (
                    <div class='flex flex-col justify-between w-full max-w-sm p-4 bg-white border semi border-gray-200 rounded-lg shadow sm:p-8 dark:bg-gray-800 dark:border-gray-700 shadow-style hover:shadow-green-500'>
                        <div>
                            <h5 class='mb-2 text-xl font-semibold text-green-950 dark:text-gray-100'>
                                {title}
                            </h5>
                            <p class='text-gray-800 mb-5 dark:text-gray-200 '>
                                {subtitle}
                            </p>

                            <div class='flex items-baseline text-gray-900 dark:text-white'>
                                <span class='text-3xl font-semibold'>$</span>
                                <span class='text-5xl font-extrabold tracking-tight'>
                                    {price}
                                </span>
                                <span class='ms-1 text-xl font-normal text-gray-500 dark:text-gray-400'>
                                    /final
                                </span>
                            </div>
                            <hr class='border-t-2 border-gray-400 my-4' />
                            {text.map((text) => {
                                return (
                                    <ul
                                        role='list'
                                        class='space-y-5 my-4'
                                    >
                                        <li class='flex items-center'>
                                            <svg
                                                class='flex-shrink-0 w-4 h-4 text-green-700 dark:text-green-500'
                                                aria-hidden='true'
                                                xmlns='http://www.w3.org/2000/svg'
                                                fill='currentColor'
                                                viewBox='0 0 20 20'
                                            >
                                                <path d='M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5Zm3.707 8.207-4 4a1 1 0 0 1-1.414 0l-2-2a1 1 0 0 1 1.414-1.414L9 10.586l3.293-3.293a1 1 0 0 1 1.414 1.414Z' />
                                            </svg>
                                            <span class='text-base font-normal leading-tight text-gray-500 dark:text-gray-400 ms-3'>
                                                {text}
                                            </span>
                                        </li>
                                    </ul>
                                )
                            })}
                        </div>
                        <a href='#calendly'>
                            <button
                                type='button'
                                class='text-white bg-green-700 hover:bg-green-800 focus:ring-4 focus:outline-none focus:ring-green-200 dark:bg-green-600 dark:hover:bg-green-700 dark:focus:ring-green-900 font-medium rounded-lg text-sm px-5 py-2.5 inline-flex justify-center w-full text-center mt-4'
                            >
                                Elegir plan
                            </button>
                        </a>
                    </div>
                )
            })
        }
    </div>
</section>
<style>
    .shadow-style:hover {
        box-shadow: 0 1px 5px rgb(67, 214, 14);
    }
</style>
