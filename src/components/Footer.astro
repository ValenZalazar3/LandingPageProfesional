---
import WhatsApp from '@/icons/WhatsApp.astro'
---

<footer class='bg-white rounded-lg shadow dark:bg-gray-900 m-4'>
    <div class='w-full max-w-screen-xl mx-auto p-4 md:py-8'>
        <div class='sm:flex sm:items-center sm:justify-between'>
            <a
                href='#hero'
                class='flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse'
            >
                <img
                    src='/Logo.jpeg'
                    class='h-8'
                    alt='Landing Page Profesional'
                />
                <span
                    class='self-center text-2xl font-semibold whitespace-nowrap dark:text-white'
                    >Landing Page Profesional</span
                >
            </a>
            <ul
                class='flex flex-col md:flex-row items-center mb-6 text-sm font-medium text-gray-500 sm:mb-0 dark:text-gray-400'
            >
                <li>
                    <a
                        href='https://www.instagram.com/landingfitnesspro/'
                        class='flex items-center mb-4 sm:mb-0 space-x-1 rtl:space-x-reverse'
                        target='_blank'
                    >
                        <img
                            src='/icons/instagram.svg'
                            class='h-4'
                            alt='Landing Page Profesional'
                        />
                        <span
                            class='hover:underline text-lg font-light whitespace-nowrap dark:text-white'
                            >Instagram</span
                        >
                    </a>
                </li>
                <li>
                    <a
                        href='https://wa.me/+5491134709711?text=Hola%20me%20gustaría%20obtener%20más%20información%20sobre%20tus%20servicios'
                        class='flex items-center mb-4 sm:mb-0 space-x-0 rtl:space-x-reverse'
                        target='_blank'
                    >
                        <div>
                            <WhatsApp
                                class='h-4 mr-[-7rem] ml-[-7rem] md:ml-7'
                            />
                        </div>

                        <span
                            class='hover:underline text-lg font-light whitespace-nowrap dark:text-white'
                            >WhatsApp</span
                        >
                    </a>
                </li>
                <li>
                    <a
                        href='#calendly'
                        class='hover:underline md:ml-28 text-lg font-light whitespace-nowrap dark:text-white'
                        >Contacto</a
                    >
                </li>
            </ul>
        </div>
        <hr
            class='my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8'
        />
        <span
            class='block text-sm text-gray-500 sm:text-center dark:text-gray-400'
            >© 2024 <a
                href=''
                class='hover:underline'
                >Landing Page Profesional™</a
            >.</span
        >
    </div>
</footer>
