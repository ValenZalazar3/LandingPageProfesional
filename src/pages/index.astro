---
import Layout from '@/layouts/Layout.astro'
import Hero from '@/components/Hero.astro'
import Projects from '@/components/Projects.astro'
import Services from '@/components/Services.astro'
import Benefits from '@/components/Benefits.astro'
import Calendly from '@/components/Calendly.astro'
import SectionContainer from '@/components/SectionContainer.astro'
import Steps from '@/components/Steps.astro'
---

<Layout
	title='Lading Page Profesional'
	description='Especializados en hacer Langind Page Profesionales para abogados, contadores y gestores.'
>
	<main class='px-4'>
		<SectionContainer
			class='py-16 md:py-36'
			id='hero'
		>
			<Hero />
		</SectionContainer>
	</main>
	<div class='space-y-10 px-4'>
		<!-- <SectionContainer
			class='py-14'
			id='services'
		>
			<Services />
		</SectionContainer> -->
		<SectionContainer
			class='py-14'
			id='projects'
		>
			<Projects />
		</SectionContainer>
		<SectionContainer
			class='py-14'
			id='benefits'
		>
			<Benefits />
		</SectionContainer>
		<SectionContainer
			class='py-14'
			id='steps'
		>
			<Steps />
		</SectionContainer>
		<SectionContainer id='calendly' />
		<Calendly />
	</div>
</Layout>
